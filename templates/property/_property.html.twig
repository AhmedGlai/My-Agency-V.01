<div class="card mb-2">

    <div class="card-body">
        <h5 class="card-title">
            {% if prop.filename %}
                <img src="{{ vich_uploader_asset(prop, 'imageFile')|imagine_filter('thumb') }}" alt="card-img-top" width=100%>
            {% endif %}
            <a href="{{ path('property.show', {slug: prop.slug, id:prop.id}) }}">
                {{ prop.title }}
            </a>
        </h5>
        <p class="card-text">{{ prop.surface }}mÂ² {{ prop.city }} {{ prop.postalCode }}</p>
        <div class="text-primary" style="font-size: 2rem;font-weight: bold;">
            {{ prop.price|number_format(0,'',' ') }}$
        </div>

    </div>
</div>

