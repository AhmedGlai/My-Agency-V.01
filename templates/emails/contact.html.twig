<mjml>
    <mj-body>
        <mj-section>
            <mj-column>
                    <table border="0" cellpadding="0" cellspacing="0" role="presentation">
                        <tr>
                            <td>
                                OFFER
                            </td>
                            <td>
                                <a href="{{ url('property.show',{id:contact.property.id, slug:contact.property.slug}) }}">
                                    {{ contact.property.title }}</a>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Lastname
                            </td>
                            <td>
                                {{ contact.lastname }}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Firstname
                            </td>
                            <td>
                                {{ contact.firstname }}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Telephone
                            </td>
                            <td>
                                {{ contact.phone }}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Email
                            </td>
                            <td>
                                {{ contact.email }}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Message
                            </td>
                            <td>
                                {{ contact.message|nl2br }}
                            </td>
                        </tr>

                    </table>

            </mj-column>
        </mj-section>
    </mj-body>
</mjml>